/** Implements a graphical square. */
class Circle {
    field int x, y; // Position
    field int radius;

    constructor Circle new(int Ax, int Ay, int aRadius) {
        let radius = aRadius;
        let x = (Ax * 2 * aRadius) + aRadius;
        let y = (Ay * 2 * aRadius) + aRadius;
        do draw();
        return this;
    }

    /** Disposes this square. */
    method void dispose() {
       do Memory.deAlloc(this);
       return;
    }

    /** Draws the square on the screen. */
    method void draw() {
       do Screen.setColor(true);
       do Screen.drawCircle(x, y, radius);
       return;
    }

    //
    // ACCESSORS
    //
    method int getGridX() {
        return (x - radius) / (2 * radius);
    }

    method int getGridY() {
        return (y - radius) / (2 * radius);
    }
}
